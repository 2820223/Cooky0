    android:background="@drawable/bacground2">

    <TextView android:layout_marginTop="170dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="22dp" android:textStyle="bold" android:textColor="@color/white" android:text="Question" android:id="@+id/question"/>


